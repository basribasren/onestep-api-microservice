{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/",
        "dist/",
        "client/",
        "server/logs"
    ],
    "verbose": true,
    "execMap":
    {
        "js": "node --harmony"
    },
    "watch": [
        "bin/",
        "server/"
    ],
    "env":
    {
        "NODE_ENV": "development"
    },
    "ext": "js,json"
}
